<Application x:Class="CoinTracker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CoinTracker"
             xmlns:viewModel="clr-namespace:CoinTracker.ViewModels"
             xmlns:view="clr-namespace:CoinTracker.Views">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/MenuButtonTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        
            <DataTemplate DataType="{x:Type viewModel:AssetsViewModel}">
                <view:AssetsView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:RatesViewModel}">
                <view:RatesView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:ExchangesViewModel}">
                <view:ExchangesView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:MarketsViewModel}">
                <view:MarketsView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
